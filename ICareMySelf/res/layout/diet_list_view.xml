<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:baselineAligned="false"
    android:paddingTop="@dimen/activity_vertical_margin"       
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"    	
    	android:orientation="horizontal">
        
        <TextView
           android:id="@+id/viewDateOfDiet"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"	        	       
	       android:text="@string/dateOfDiet"	       
	       android:textColor="#585858"	       
	       android:drawablePadding="3dp"
	       android:layout_gravity="left"
	       android:paddingRight="5dp"
	       android:gravity="bottom"
	       android:drawableLeft="@drawable/date"	       
	       android:textSize="15sp" />
        
        <TextView
           android:id="@+id/viewTimeOfDiet"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"	        	       
	       android:text="@string/timeOfDiet"	       
	       android:textColor="#585858"	       
	       android:drawablePadding="3dp"
	       android:layout_gravity="left"	       
	       android:gravity="bottom"
	       android:paddingRight="10dp"
	       android:drawableLeft="@drawable/time"	       
	       android:textSize="15sp" />
        
        <ImageView	         
	         android:id="@+id/viewAlarmDiet"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"         
	         android:src="@drawable/alarm" 
	         android:layout_gravity="right"           	                 
	         android:contentDescription="@string/load" />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:paddingTop="5dp"        	
    	android:orientation="horizontal">
        
        <TextView
           android:id="@+id/viewMyFeastManu"           
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"	        	       
	       android:text="@string/myfeastName"	       
	       android:textColor="#585858"       
	       android:drawablePadding="3dp"
	       android:paddingRight="5dp"
	       android:drawableLeft="@drawable/feastname"
	       android:layout_gravity="left"
	       android:gravity="bottom"	       
	       android:textSize="15sp" />
        
        <TextView
           android:id="@+id/viewMyFeastName"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"	        	       
	       android:text="@string/myfeastManu"	       
	       android:textColor="#585858"	       
	       android:drawablePadding="3dp"	        
	       android:paddingRight="5dp"      
	       android:drawableLeft="@drawable/feastmenu"
	       android:layout_gravity="left"
	       android:gravity="bottom"	       
	       android:textSize="15sp" />
        
    </LinearLayout>    
    
        
 
</LinearLayout>

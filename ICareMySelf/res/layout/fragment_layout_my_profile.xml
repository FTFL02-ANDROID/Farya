<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"	    
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"       
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >
   
    <ImageView        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/load"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:src="@drawable/home"/>
    
    <ScrollView 	    
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">	
	        
       	<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="20dp"	    
		    android:orientation="vertical" >
	    
		    <TextView
		        android:id="@+id/viewName"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"	        	       
			    android:text="@string/editName"	        
			    android:layout_gravity="left"
			    android:drawableLeft="@drawable/name"                
			    android:gravity="bottom"        
			    android:textColor="@android:color/black"
			    android:textStyle="bold"
			    android:textSize="20sp" />		       
		            
		        <LinearLayout 
		            android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="10dp"	
				    android:layout_marginLeft="20dp"		    
				    android:orientation="horizontal">
				    
		            <TextView
				        android:drawableLeft="@drawable/note"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"	        	       
					    android:text="@string/editNote"	
					    android:layout_marginRight="10dp" 			         
					    android:textColor="#585858"	      	    		    		    
					    android:textSize="18sp" />			    
				    	        
				    
				    <TextView
				        android:id="@+id/viewNote"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"	        	       
					    android:text="@string/editNote"	 			         
					    android:textColor="#585858"	      	    		    		    
					    android:textSize="18sp" />		            
		            
        		</LinearLayout> 
		        
		       	<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="70dp"
				    android:layout_marginBottom="10dp"
				    android:gravity="center"	    
				    android:orientation="horizontal" >	    
				    
				    <Button
				        android:id="@+id/layoutViewDiet"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"	        	       
				        android:text="@string/viewDiet"			     
				        android:paddingLeft="30dp"
				        android:paddingRight="30dp"	
				        android:paddingTop="20dp"
				        android:paddingBottom="20dp"
				        android:layout_marginTop="10dp"   
				        android:layout_marginBottom="10dp" 
				        android:layout_marginRight="10dp"
				        android:drawablePadding="5dp"	              
				        android:drawableTop="@drawable/viewdiet" 		                
				        android:textColor="@android:color/black"		         
		        		android:background="@drawable/rounded_blue" 		        
				        style="?android:attr/buttonBarButtonStyle"
				        android:textStyle="bold"
				        android:textSize="18sp" />      
				    
				    <Button
				        android:id="@+id/layoutViewVaccin"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"	        	       
				        android:text="@string/viewVaccin"		         
		        		android:background="@drawable/rounded_blue"  
				        android:paddingLeft="10dp"
				        android:paddingRight="10dp"	
				        android:paddingTop="22dp"
				        android:paddingBottom="22dp"	
				        android:layout_marginTop="10dp"   
				        android:layout_marginBottom="10dp" 	
				        android:layout_marginRight="10dp"        
				        android:drawableTop="@drawable/viewvaccine" 		                
				        android:textColor="@android:color/black"
				        style="?android:attr/buttonBarButtonStyle"
				        android:textStyle="bold"
				        android:textSize="18sp" />
				    
				    <Button
				        android:id="@+id/layoutViewMedicalHistory"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"	        	       
				        android:text="@string/viewMedicalHistory"	
				        android:layout_gravity="center"	
				        android:gravity="center_vertical"		         
		        		android:background="@drawable/rounded_blue"         
				        android:drawablePadding="5dp"	
				        android:paddingLeft="22dp"
				        android:paddingRight="22dp"	
				        android:paddingTop="20dp"
				        android:paddingBottom="20dp"        
				        android:drawableTop="@drawable/viewhistory" 		                
				        android:textColor="@android:color/black"
				        style="?android:attr/buttonBarButtonStyle"
				        android:textStyle="bold"
				        android:textSize="18sp" />
				    
			    </LinearLayout>
    
	      </LinearLayout>
	    
     </ScrollView>
	 
</LinearLayout>